<Window x:Class="MicroTcp.Client.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroTcp.Client"
        mc:Ignorable="d"
        Title="Enter credentials" Height="200" Width="300">
    <Grid Margin="0,0,0,0">
        <TextBox x:Name="txt_NickName" HorizontalAlignment="Left" Height="23" Margin="89,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_Sign_In" Content="Sign In" HorizontalAlignment="Left" Margin="113,120,0,0" VerticalAlignment="Top" Width="75" Click="btn_Sign_In_Click"/>
        <Label Content="Nick Name" HorizontalAlignment="Left" Margin="21,42,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Password" HorizontalAlignment="Left" Height="23" Margin="89,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="21,78,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
